#!/usr/bin/make -f

%:
	dh $@ --with python2 --install-layout=deb,quilt

override_dh_clean:
	rm -rf ./build
	rm -rf ./Shinken.egg-info
	dh_clean

override_dh_install:
	# INSTALL
	dh_install
	rm debian/shinken-module-snmpbooster/usr/lib/python2.7/dist-packages/shinken/__init__.py
	rm debian/shinken-module-snmpbooster/usr/lib/python2.7/dist-packages/shinken/modules/__init__.py
